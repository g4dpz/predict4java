<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress MagicNumber for all files - scientific calculations use many constants -->
    <suppress checks="MagicNumber" files=".*\.java"/>
    
    <!-- Suppress JavadocVariable for private fields - internal implementation details -->
    <suppress checks="JavadocVariable" files=".*\.java"/>
    
    <!-- Suppress EmptyLineSeparator after license header - legacy code style -->
    <suppress checks="EmptyLineSeparator" files=".*\.java"/>
    
    <!-- Suppress RightCurlySame - legacy code style for multi-block statements -->
    <suppress checks="RightCurly" files=".*\.java"/>
    
    <!-- Suppress MemberName for single-letter variables in scientific calculations -->
    <suppress checks="MemberName" files="DeepSpaceSatellite\.java"/>
    <suppress checks="MemberName" files="AbstractSatellite\.java"/>
    
    <!-- Suppress OverloadMethodsDeclarationOrder - interface methods grouped logically -->
    <suppress checks="OverloadMethodsDeclarationOrder" files="Satellite\.java"/>
    
    <!-- Suppress CommentsIndentation - legacy code style -->
    <suppress checks="CommentsIndentation" files=".*\.java"/>
    
    <!-- Suppress NeedBraces - legacy code style for simple if statements -->
    <suppress checks="NeedBraces" files=".*\.java"/>
    
    <!-- Suppress OperatorWrap - legacy code style -->
    <suppress checks="OperatorWrap" files=".*\.java"/>
    
    <!-- Suppress LineLength for scientific calculations with long formulas -->
    <suppress checks="LineLength" files="AbstractSatellite\.java"/>
    
    <!-- Suppress HiddenField for method parameters in scientific calculations -->
    <suppress checks="HiddenField" files="AbstractSatellite\.java"/>
    
    <!-- Suppress ParameterName for single-letter and scientific notation parameters -->
    <suppress checks="ParameterName" files="AbstractSatellite\.java"/>
</suppressions>
